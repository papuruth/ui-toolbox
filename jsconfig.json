{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "commonJS",
        "baseUrl": "src",
        "paths": {
            "components/*": ["./components/*"],
            "pages/*": ["./pages/*"],
            "utils/*": ["./utils/*"],
            "styles/*": ["./styles/*"],
            "routes/*": ["./routes/*"],
            "localization/*": ["./localization/*"],
            "assets/*": ["./assets/*"],
            "services/*": ["./services/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*", "build/"]
}
